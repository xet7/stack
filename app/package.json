{
	"name": "app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint"
	},
	"dependencies": {
		"@headlessui/react": "^1.3.0",
		"@moxy/next-layout": "^2.2.3",
		"axios": "^0.21.1",
		"babel-eslint": "^10.1.0",
		"concurrently": "^6.2.0",
		"debug": "^4.3.1",
		"next": "^13.4.6",
		"next-auth": "^3.27.0",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-query": "^3.25.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.14.5",
		"autoprefixer": "^10.2.6",
		"eslint": "7.29.0",
		"eslint-config-next": "11.0.0",
		"eslint-plugin-lodash": "^7.2.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-tailwindcss": "^1.16.1",
		"lint-staged": "^11.0.0",
		"postcss": "^8.3.5",
		"tailwindcss": "^2.2.2"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true
	},
	"eslintConfig": {
		"root": true,
		"parser": "babel-eslint",
		"env": {
			"browser": true,
			"es2020": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended",
			"plugin:tailwindcss/recommended"
		],
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 11,
			"sourceType": "module"
		},
		"plugins": [
			"react",
			"react-hooks",
			"lodash",
			"tailwindcss"
		],
		"rules": {
			"no-console": "error",
			"no-restricted-imports": [
				"error",
				{
					"paths": [
						{
							"name": "react-query",
							"importNames": [
								"queryCache"
							],
							"message": "Use useQueryCache instead."
						}
					]
				}
			],
			"no-unused-vars": [
				"error",
				{
					"vars": "all",
					"args": "after-used",
					"varsIgnorePattern": "_key"
				}
			],
			"react/react-in-jsx-scope": 0,
			"react/prop-types": 0,
			"react/no-unescaped-entities": 0,
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn",
			"lodash/import-scope": "error"
		},
		"globals": {
			"React": "writable"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"ignorePatterns": [
			".next"
		]
	}
}
